<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= link_to 'Show Info', location,class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit Location', edit_location_path(location),class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete Location', location, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path,class: 'btn btn-success btn-xs' %>
