<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Job title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.role %></td>
        <td><%= employee.job_title %></td>
        <td><%= link_to 'Show Info', employee,class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit Employee', edit_employee_path(employee),class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete Employee', employee, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path,class: 'btn btn-success btn-xs' %>
