<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="company-container">
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= link_to 'Show Info', company,class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit Company', edit_company_path(company),class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete Company', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: 'btn btn-success btn-xs'%>
