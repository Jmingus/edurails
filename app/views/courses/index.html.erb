<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Reqs</th>
      <th>Enrollment cap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.reqs %></td>
        <td><%= course.enrollment_cap %></td>
        <td><%= link_to 'Show Info', course,class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit Course', edit_course_path(course),class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete Course', course, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path,class: 'btn btn-success btn-xs' %>
